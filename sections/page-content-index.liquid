<div class="
  {% if section.settings.container %} container {% else %} container-fluid {% endif %}
  {{ section.settings.margin_top | prepend: 'mt-' }}
  {{ section.settings.margin_bottom | prepend: 'mb-' }}
">

    {% if section.settings.heading != blank %}
    <{{ section.settings.heading_size }} class="{{ section.settings.alignment }}">
        {{ section.settings.heading | escape }}
    </{{ section.settings.heading_size }}>
    {% endif %}

    {% if section.settings.content != blank %}
    {%- assign selectedpage = pages[section.settings.page] -%}
    <div class="rte mb-4">{{ selectedpage.content }}</div>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
    <a href="{{ section.settings.button_link }}"
        class="btn {{ section.settings.btn_color }} {{ section.settings.btn_variant }} {{ section.settings.btn_size }}">
        {{ section.settings.button_label | escape }}
    </a>

    {% endif %}

</div>
  {% schema %}
  {
    "name": "Page Content",
    "class": "page-content",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Talk about your brand"
      },
      {
        "type": "select",
        "id": "heading_size",
        "label": "Heading Size",
        "default": "h2",
        "options": [
          {
            "value": "h1", "label": "H1"
          },
          {
            "value": "h2", "label": "H2"
          },
          {
            "value": "h3", "label": "H3"
          },
          {
            "value": "h4", "label": "H4"
          },
          {
            "value": "h5", "label": "H5"
          },
          {
            "value": "h6", "label": "H6"
          }
        ]
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Alignment",
        "default": "text-left",
        "options": [
            { "value": "text-left", "label": "Left" },
            { "value": "text-center", "label": "Center" },
            { "value": "text-right", "label": "Right" }
        ]
      },
      {
        "type": "page",
        "id": "page",
        "label": "Select Page",
        "info": "Select any page to show it's content on homepage"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "header",
        "content": "General settings"
      },
      {
        "type": "checkbox",
        "id": "container",
        "label": "Wrap in container",
        "default": true
      },
       {
            "type": "select",
            "id": "btn_color",
            "label": "Button color",
            "default": "btn-primary",
            "options": [
                { "value": "btn-primary", "label": "Primary" },
                { "value": "btn-secondary", "label": "Secondary" }
            ]
        },
        {
            "type": "select",
            "id": "btn_variant",
            "label": "Button variant",
            "default": "",
            "options": [
                { "value": "", "label": "Normal" },
                { "value": "btn-outline", "label": "Outline" }
            ]
        },
        {
            "type": "select",
            "id": "btn_size",
            "label": "Button size",
            "default": "",
            "options": [
                { "value": "btn-sm", "label": "Small" },
                { "value": "", "label": "Normal" },
                { "value": "btn-lg", "label": "Large" }
            ]
        },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "paragraph",
        "content": "Based on Bootstrap spacing utility classes [Learn more](https://getbootstrap.com/docs/4.5/utilities/spacing/)"
      },
      {
        "type": "range",
        "id": "margin_top",
        "label": "Margin top",
        "min": 0,
        "max": 12,
        "step": 1,
        "default": 0
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "label": "Margin bottom",
        "min": 0,
        "max": 12,
        "step": 1,
        "default": 6
      }
    ],
    "presets": [
      {
        "name": "Page content",
        "category": "Content"
      }
    ]
  }
{% endschema %}