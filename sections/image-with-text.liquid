<div class="
  {% if section.settings.container %} container {% else %} container-fluid {% endif %}
  {{ section.settings.margin_top | prepend: 'mt-' }}
  {{ section.settings.margin_bottom | prepend: 'mb-' }}
">
  <div class="row align-items-center {{ section.settings.image_alignment }}">
    <div class="col{{ section.settings.breakpoint }} mb-3">
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="d-inline-block text-decoration-none text-center">
        {% endif %}
        <div class="
          position-relative
          overflow-hidden
          {% if section.settings.image_border %}img-thumbnail{% endif %}
          {% if section.settings.image_circle %}rounded-circle{% endif %}
          {{ section.settings.image_hover_effect }}
        ">
       {% if section.settings.image_svg != blank %}
      {% assign img_fluid = 'svg-fluid' | prepend: '<svg class="' | append: '"'%}
           {{section.settings.image_svg | replace: "<svg", img_fluid }}
      {% else %}
          {% if section.settings.image != blank %}
          {% assign image_size = section.settings.image_width | append: 'x' | append: section.settings.image_height %}
          <img class="img-fluid lazyload {% if section.settings.image_circle %}rounded-circle{% endif %}"
            src="{{ 'no-image.jpg' | asset_img_url: image_size, crop: 'center' }}"
            data-src="{{ section.settings.image | img_url: image_size, crop: 'center'  }}"
            alt="{{ section.settings.image.alt | escape }}" width="{{ section.settings.image_width }}"
            height="{{ section.settings.image_height }}" loading="lazy">
          {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg bg-light' }}
          {% endif %}
          {% endif %}
        </div>
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      </a>
      {% endif %}
    </div>
    <div class="col{{ section.settings.breakpoint }}">
      {% if section.settings.subheading != blank %}
      <{{ section.settings.subheading_size }}
        class="{% if section.settings.submute %}text-muted{% endif %} {{ section.settings.sub_margin_bottom | prepend: 'mb-' }} {{ section.settings.sub_letter_spacing | prepend: 'letter-spacing-' }}">
        {{ section.settings.subheading | escape }}
      </{{ section.settings.subheading_size }}>
      {% endif %}
      {% if section.settings.heading != blank %}
      <{{ section.settings.heading_size }} class="">
        {{ section.settings.heading | escape }}
      </{{ section.settings.heading_size }}>
      {% endif %}

      {% if section.settings.content != blank %}
      <div class="rte mb-4">{{ section.settings.content }}</div>
      {% endif %}

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}"
        class="btn {{ section.settings.btn_color }} {{ section.settings.btn_variant }} {{ section.settings.btn_size }} {{section.settings.btn_effect}} {% if section.settings.btn-block %}btn-block{% endif %}">
        {{ section.settings.button_label | escape }}
      </a>
      {% endif %}
    </div>
  </div>
</div>
