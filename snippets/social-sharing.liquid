<ul class="social-sharing list-inline mb-4" aria-label="{{ 'social.share_label' | t }}">

    {% if settings.share_facebook %}
      <li class="list-inline-item py-1">
        <a class="btn btn-light d-flex align-items-center" target="_blank" rel="noopener" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
          {% render 'icon-facebook' %}
          <span class="pl-2" aria-hidden="true">{{ 'social.share_on_facebook' | t }}</span>
          <span class="sr-only">{{ 'social.alt_text.share_on_facebook' | t }}</span>
        </a>
      </li>
    {% endif %}
  
    {% if settings.share_twitter %}
    <li class="list-inline-item py-1">
        <a class="btn btn-light d-flex align-items-center" target="_blank" rel="noopener" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
          {% render 'icon-twitter' %}
          <span class="pl-2" aria-hidden="true">{{ 'social.share_on_twitter' | t }}</span>
          <span class="sr-only">{{ 'social.alt_text.share_on_twitter' | t }}</span>
        </a>
      </li>
    {% endif %}
  
    {% if settings.share_pinterest %}
      <li class="list-inline-item py-1">
        <a class="btn btn-light d-flex align-items-center" target="_blank" rel="noopener" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: 'x1500' }}&amp;description={{ share_title | url_param_escape }}">
          {% render 'icon-pinterest' %}
          <span class="pl-2" aria-hidden="true">{{ 'social.share_on_pinterest' | t }}</span>
          <span class="sr-only">{{ 'social.alt_text.share_on_pinterest' | t }}</span>
        </a>
      </li>
    {% endif %}

    {% if settings.share_whatsapp %}
        <li class="list-inline-item py-1">
            <a class="btn btn-light d-flex align-items-center" target="_blank" rel="noopener" href="https://api.whatsapp.com/send?text={{ share_title | url_param_escape }}%20-%20{{ shop.url | append: share_permalink }}%20">
            {% render 'icon-social-whatsapp' %}
            <span class="pl-2" aria-hidden="true">{{ 'social.share_on_whatsapp' | t }}</span>
            <span class="sr-only">{{ 'social.alt_text.share_on_whatsapp' | t }}</span>
            </a>
        </li>
    {% endif %}
  
  </ul>
  