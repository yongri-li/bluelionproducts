<div class="
  {% if block.settings.container %} container {% else %} container-fluid {% endif %}
  {{ block.settings.margin_top | prepend: 'mt-' }}
  {{ block.settings.margin_bottom | prepend: 'mb-' }}
">

    {% if block.settings.heading != blank %}
    <{{ block.settings.heading_size }} class="{{ block.settings.alignment }}">
        {{ block.settings.heading | escape }}
    </{{ block.settings.heading_size }}>
    {% endif %}

    {% if block.settings.content != blank %}
    <div class="rte mb-4">{{ block.settings.content }}</div>
    {% endif %}

    {% if block.settings.button_label != blank and block.settings.button_link != blank %}
<div class="{{ block.settings.alignment }}">
    <a href="{{ block.settings.button_link }}"
        class="btn {{ block.settings.btn_color }} {{ block.settings.btn_variant }} {{ block.settings.btn_size }} {{block.settings.btn_effect}}  {% if block.settings.btn-block %}btn-block{% endif %}">
        {{ block.settings.button_label | escape }}
    </a>
</div>
    {% endif %}

</div>